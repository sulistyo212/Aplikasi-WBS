<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/background"
            android:paddingLeft="30dp"
            android:paddingTop="21dp"
            android:paddingRight="20dp">

            <ImageView
                android:background="@drawable/ombudsman"
                android:id="@+id/home_logoUsr"
                android:layout_width="75dp"
                android:layout_height="68dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/home_namaPT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="97dp"
                android:text="Persyaratan Laporan"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="1. Pelapor adalah Warga Negara Indonesia atau\n     Penduduk                                                   "
        android:textColor="#2596be"
        android:textSize="16dp"></me.biubiubiu.justifytext.library.JustifyTextView>>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#2596be"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Laporan sudah secara langsung disampaikan\n     kepada Terlapor, tetapi tidak mendapat penyel\n      esaian sebagai mestinya                                      ">
    </me.biubiubiu.justifytext.library.JustifyTextView>>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#2596be"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Peristiwa, tindakan atau keputusan yang\n      dilaporkan belum lewat 2 (dua) tahun terjadi         ">
    </me.biubiubiu.justifytext.library.JustifyTextView>>
</LinearLayout>